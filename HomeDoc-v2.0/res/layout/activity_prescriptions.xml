<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thebesttopdesktopgreywallpapershdgreywallpaper30"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Prescriptions" >

    <TextView
        android:id="@+id/textViewPerscrip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewPerscrip2"
        android:layout_alignBottom="@+id/textViewPerscrip2"
        android:layout_alignLeft="@+id/imageButtonPerscript2"
        android:layout_marginLeft="23dp"
        android:text="Advil"
          android:textColor="#00688B"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewPerscrip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonPerscrip1"
        android:layout_alignRight="@+id/imageButtonPerscrip1"
        android:layout_marginRight="13dp"
        android:text="Tylenol"
          android:textColor="#00688B"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewPerscrip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonPerscrip3"
        android:layout_alignLeft="@+id/imageButtonPerscrip3"
        android:layout_alignRight="@+id/imageButtonPerscrip3"
        android:text="Tramadol"
          android:textColor="#00688B"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/buttonReturnFromPers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Return to Main" />

    <ImageButton
        android:id="@+id/imageButtonPerscrip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/numberPickerPersc2"
        android:layout_below="@+id/textViewPerscrip3"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/imageButtonPerscrip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButtonPerscript2"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/imageButtonPerscript2"
        android:src="@drawable/ic_launcher" />

    <NumberPicker
        android:id="@+id/numberPickerPersc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonPerscrip3"
          android:textColor="#00688B"
        android:textStyle="bold"
        android:layout_below="@+id/imageButtonPerscrip3" />

    <ImageButton
        android:id="@+id/imageButtonPerscript2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numberPickerPersc3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

    <NumberPicker
        android:id="@+id/numberPickerPersc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textColor="#00688B"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/imageButtonPerscript2"
        android:layout_alignTop="@+id/numberPickerPersc2" />

    <NumberPicker
        android:id="@+id/numberPickerPersc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonReturnFromPers"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp" />

</RelativeLayout>