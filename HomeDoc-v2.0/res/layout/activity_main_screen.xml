<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thebesttopdesktopgreywallpapershdgreywallpaper30"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreen" >

    <Button
        android:id="@+id/buttonEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textViewWelcomeMain"
        android:textColor="@android:color/white"
		android:background="#00688B"
        android:text="Edit Profile" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonEditProfile"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="#00688B"
        android:text="Log Out"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonDocOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWelcomeMain"
        android:layout_centerHorizontal="true"
         android:textColor="@android:color/white"
		android:background="#00688B"
        android:text="Doctor&apos;s Orders" />

    <Button
        android:id="@+id/buttonDocChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonDocOrders"
        android:layout_alignRight="@+id/buttonDocOrders"
        android:layout_below="@+id/buttonDocOrders"
        android:layout_marginTop="16dp"
         android:textColor="@android:color/white"
		android:background="#00688B"
        android:text="Doctor Chat" />

    <Button
        android:id="@+id/buttonDocVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonDocChat"
        android:layout_alignRight="@+id/buttonDocChat"
        android:layout_below="@+id/buttonDocChat"
        android:layout_marginTop="16dp"
         android:textColor="@android:color/white"
		android:background="#00688B"
        android:text="Doctor Video Chat" />

    <Button
        android:id="@+id/buttonDocPres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonDocVideo"
        android:layout_alignRight="@+id/buttonDocVideo"
        android:layout_below="@+id/buttonDocVideo"
        android:layout_marginTop="16dp"
         android:textColor="@android:color/white"
		android:background="#00688B"
        android:text="Prescriptions" />

    <TextView
        android:id="@+id/textViewWelcomeMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00688B"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonFindHos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonDocPres"
        android:layout_alignRight="@+id/buttonDocPres"
        android:layout_below="@+id/buttonDocPres"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
		android:background="#00688B"
        android:text="Find Hospital" />

</RelativeLayout>