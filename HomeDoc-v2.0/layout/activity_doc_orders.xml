<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thebesttopdesktopgreywallpapershdgreywallpaper30"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DocOrders" >

    <Spinner
        android:id="@+id/spinnerOrders"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#00688B"
		android:textStyle="bold"
        android:clickable="true"
        android:textSize="18pt" />

    <TextView
        android:id="@+id/textViewOrder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerOrders"
        android:enabled="true"
        android:textColor="#00688B"
		android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewOrder1Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/spinnerOrders"
        android:layout_below="@+id/textViewOrder1"
        android:enabled="true"
        android:textColor="#00688B"
		android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonReturnFromOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
		android:background="#00688B"
        android:text="Home" />

</RelativeLayout>